<?xml version="1.0"?>
<ruleset xmlns="http://codenarc.org/ruleset/1.0">

  <description>
    Basic rule set.
    These rules are intended to be broadly (if not universally) applicable.
  </description>

  <rule class='org.codenarc.rule.generic.IllegalRegexRule'>
    <property name='name' value='TodoComment'/>
    <property name='regex' value='(TODO)|(FIXME)'/>
    <property name='violationMessage' value='Resolve unexpected comment.'/>
  </rule>
  
  <rule class='org.codenarc.rule.basic.AssignmentInConditionalRule'/>
  
  <rule-script path='file:///E:/!groovy-test/h.groovy'/>
  
    <ruleset-ref path='rulesets/basic.xml'>
        <exclude name='StringInstantiation'/>
    </ruleset-ref>
  
</ruleset>
